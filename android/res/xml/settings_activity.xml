<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/network_setting">

        <CheckBoxPreference
                android:key="@string/key_wifi_image"
                android:title="@string/wifi_fetch_image"
                android:summaryOff="@string/setting_off"
                android:summaryOn="@string/setting_on"/>
    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="@string/play_setting">
        <CheckBoxPreference
                android:key="@string/key_use_flash"
                android:title="@string/use_flash"
                android:summaryOff="@string/flash_off"
                android:summaryOn="@string/flash_on"/>
    </PreferenceCategory>
    
</PreferenceScreen>
